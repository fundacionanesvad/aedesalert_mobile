<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item android:id="@+id/action_search"
        android:title="@string/action_camera_qr"
        android:icon="@drawable/action_search"
        app:actionViewClass="android.support.v7.widget.SearchView"
        app:showAsAction="always" />

    <item android:id="@+id/action_sort"
        android:title="@string/action_camera_qr"
        android:icon="@drawable/action_sort"
        app:showAsAction="always">

        <menu>

            <group android:id="@+id/filter" android:checkableBehavior="all">

                <item android:id="@+id/filters"
                    android:title="@string/filters"
                    android:enabled="false"
                    android:checkable="false"/>

                <item android:id="@+id/filter_inspected"
                    android:title="@string/inspected"/>

                <item android:id="@+id/filter_requalify"
                    android:title="@string/requalify"/>

                <item android:id="@+id/filter_focus"
                    android:title="@string/focus"/>

                <item android:id="@+id/filter_feverish"
                    android:title="@string/feverish"/>

            </group>

            <group android:id="@+id/group_sort" android:checkableBehavior="single">

                <item android:id="@+id/sort_title"
                    android:title="@string/order_by"
                    android:enabled="false"
                    android:checkable="false"/>

                <item android:id="@+id/sort_address"
                    android:title="@string/address"
                    android:checked="true"/>

                <item android:id="@+id/sort_date"
                    android:title="@string/date"/>

            </group>

        </menu>

    </item>

    <item android:id="@+id/action_camera"
        android:title="@string/action_camera_qr"
        android:icon="@drawable/action_qr"
        app:showAsAction="always" />

