<resources>
    <style name="TextError" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Title" parent="Base.TextAppearance.AppCompat.Title">
    </style>

    <style name="Title.Empty">
        <item name="android:textColor">@color/divider</item>
    </style>

    <style name="Title.Error">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="Title.Success">
        <item name="android:textColor">@color/success</item>
    </style>

    <style name="Title.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Title.White">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Subhead" parent="Base.TextAppearance.AppCompat.Subhead">

    </style>

    <style name="Subhead.Info">
        <item name="android:textColor">@color/divider</item>
    </style>

    <style name="Caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Hint" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/half_black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/icon_info</item>
        <item name="android:drawableStart">@drawable/icon_info</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Caption.Info">
        <item name="android:textColor">@color/divider</item>
    </style>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="streeName_color">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="comment_color">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Card">

    </style>

    <style name="Card.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Card.Line">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>